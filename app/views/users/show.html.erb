<div class="w-full">
  <div class="bg-white ml-20 py-4 pr-8 rounded-xl flex justify-between space-x-12 items-center">
    <div class="flex items-center">
      <div class="relative -translate-x-1/2 w-40 h-40">
        <% if @user.image_url.present? %><%= image_tag @user.image_url, class:
        "rounded-full border border-gray-100 bg-white shadow-sm" %> <% else %> <%=
        image_tag "default.png", class: "rounded-full border border-gray-100 bg-white
        shadow-sm" %> <% end %>
      </div>
      <div class="-ml-12">
        <div class="text-lg font-bold ">
          <%= @user.nickname %>
        </div>
        <p class="text-gray-400">
          Subscribes <%= @user.podcasts.count %> Podcasts
        </p>
      </div>
    </div>
    <% if current_user %>
    <div>
      <div>
        <%= render partial: 'users/follower', locals: { user: @user } %>
      </div>
    </div>
    <% end %>
  </div>

  <%= turbo_stream_from "subscriptions" %>
  <div
    id="subscriptions"
    class="mt-4 grid min-w-full gap-4 2xl:grid-cols-6 xl:grid-cols-4 lg:grid-cols-2"
  >
    <%= render @subscriptions %>
  </div>
</div>
