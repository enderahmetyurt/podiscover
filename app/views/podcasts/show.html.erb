<div class="flex w-full mx-auto">
  <div>
    <p class="my-5">
      <%= image_tag @podcast.image_urls.last.url %>
    </p>    

    <p class="my-5">
      <strong class="block mb-1 font-medium">Name:</strong>
      <%= @podcast.name %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Publisher:</strong>
      <%= @podcast.publisher %>
    </p>  

    <p class="my-5">
      <strong class="block mb-1 font-medium">Description:</strong>
      <%= @podcast.description %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Listen by:</strong>
      <%= @podcast.user.nickname %>
    </p>  

    <% if action_name == "show" %>
      <p class="my-5">
        <%= link_to "Listen on Spotify", @podcast.external_url %>
      </p>
    <% end %>  
        <%= link_to 'Back to podcasts', podcasts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
