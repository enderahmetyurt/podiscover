<%= turbo_frame_tag "#{dom_id(episode)}_likes" do %>
	<p class="my-5">
		<strong class="block mb-1 font-medium">Like Count:</strong>
		<%= episode.likes %>
	</p>
	<% if action == 'like' %>
		<%= button_to 'Like!', podcast_episode_like_path(episode.podcast, episode), method: :patch, data: { turbo_frame: '_top' } %>
	<% else %>
		<%= button_to 'Dislike!', podcast_episode_dislike_path(episode.podcast, episode), method: :patch, data: { turbo_frame: '_top' } %>
	<% end %>
<% end %>
