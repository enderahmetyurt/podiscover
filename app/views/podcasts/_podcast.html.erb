<div id="<%= dom_id podcast %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= podcast.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= podcast.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this podcast", podcast, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this podcast', edit_podcast_path(podcast), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
