<div class="w-full">
  <div class="flex items-center">
    <div class="relative w-24 h-24">
      <% if @user.image_url.present? %>
        <%= image_tag @user.image_url, class: "rounded-full border border-gray-100 shadow-sm" %>
      <% else %>
        <%= image_tag "default.png", class: "rounded-full border border-gray-100 shadow-sm" %>
      <% end %>
    </div>
    <div class="ml-4">
      <div class="text-lg font-bold"><%= @user.nickname %></div> subscribes <%= @user.podcasts.count %> podcasts
    </div>
  </div>
  <% if current_user %>
    <div>
      <div>
        <%= render partial: 'users/follower', locals: { user: @user } %>
      </div>
    </div>
  <% end %>

  <%= turbo_stream_from "subscriptions" %>
  <div id="subscriptions" class="grid min-w-full gap-4 2xl:grid-cols-6 xl:grid-cols-4 lg:grid-cols-2">
    <%= render @subscriptions %>
  </div>
</div>
