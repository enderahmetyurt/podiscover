<div class="w-full">
  <div class="flex items-center justify-between py-4 pr-8 ml-20 space-x-12 bg-white rounded-xl">
    <div class="flex items-center">
      <div class="relative w-40 h-40 -translate-x-1/2">
        <% if @user.image_url.present? %>
          <%= image_tag @user.image_url, class: "rounded-full border border-gray-100 bg-white shadow-sm" %>
        <% else %>
          <%= image_tag "default.png", class: "rounded-full border border-gray-100 bg-whiteshadow-sm" %>
        <% end %>
      </div>
      <div class="flex flex-col -ml-12 h-max justify-evenly">
        <div class="text-lg font-bold ">
          <%= @user.nickname %>
        </div>
        <div class="text-gray-400">
          Subscribes <%= @user.podcasts.count %> Podcasts
        </div>
          <div class="absolute text-sm font-thin text-gray-400 mt-[125px]">
            <% @user.categories_count.each do |category| %>
              <%= link_to "##{category.downcase}", category_path(Category.find_by(name: category)) %>
            <% end %>
          </div>
      </div>
    </div>
    <% if current_user %>
    <div>
      <div>
        <%= render partial: 'users/follower', locals: { user: @user } %>
      </div>
    </div>
    <% end %>
  </div>

  <%= turbo_stream_from "subscriptions" %>
  <div
    id="subscriptions"
    class="grid min-w-full gap-4 mt-4 2xl:grid-cols-6 xl:grid-cols-4 lg:grid-cols-2"
  >
    <%= render @subscriptions %>
  </div>
</div>
