<div id="<%= dom_id subscription %>" class="bg-white transition-all hover:shadow hover:-translate-y-1 p-4 rounded-xl">
  <%= link_to(subscription.podcast) do %>
    <div class="grid content-around gap-4 grid-row-2">
      <div class="rounded-xl">
        <% if subscription.podcast.image_urls.any? %>
          <%= image_tag subscription.podcast.image_urls.second.url, class:"rounded-xl" %>
        <% else %>
          <%= image_tag "podiscover.png", class:"rounded-xl" %>
        <% end %>
      </div>
      <div>
        <div class="text-lg">
          <%= subscription.podcast.name %>
        </div>
        <div class="text-xs font-medium text-gray-400">
          <%= subscription.podcast.episodes.count %> Current Episodes
        </div>
      </div>
    </div>
  <% end %>

  <% if controller_name == "subscriptions" %>
    <div class="mt-3 text-xs font-thin">
      <% if subscription.podcast.users.count > 1 %>
        <span class="text-blue-500"><%= pluralize subscription.podcast.users.count, "person" %></span> subscribe this podcast
      <% else %>
        <%= link_to subscription.user.nickname, subscription.user, class: "text-blue-500" %> subscribes
      <% end %>
    </div>
  <% end %>
</div>

