<!DOCTYPE html>
<html>
  <head>
    <title>Podiscover</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('podiscover.png')%>

    <% if content_for?(:og_header) %>
      <%= yield :og_header %>
    <% else %>
      <%= render "layouts/default_og_header" %>
    <% end %>

    <!-- Hotjar Tracking Code for https://www.podiscover.me -->
    <script>
        (function(h,o,t,j,a,r){
            h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
            h._hjSettings={hjid:2928185,hjsv:6};
            a=o.getElementsByTagName('head')[0];
            r=o.createElement('script');r.async=1;
            r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
            a.appendChild(r);
        })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
    </script>
  </head>

  <body class="flex flex-col min-h-screen" <%= 'data-admin' if current_user && current_user.is_admin? %>>
    <section class="w-full">
      <div class="flex flex-wrap items-center justify-center py-5">
        <%= render partial: 'shared/pd_logo' %>
        <%= link_to "Podiscover", root_path, class: "relative z-10 flex items-center w-auto text-2xl font-extrabold leading-none text-black select-none" %>
      </div>
    </section>
    <main class="flex flex-grow px-5 mx-auto mt-10 <%= "container" if current_user %>">
      <div class="mr-10">
        <%= render partial: 'shared/navbar' %>
      </div>

      <%= yield %>
    </main>
    <footer>
      <%= render partial: 'shared/footer' %>
    </footer>
  </body>
</html>
