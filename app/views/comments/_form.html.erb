<%= form_with model: [podcast, episode, comment], class: "flex items-center justify-between w-full" do |form| %>
  <%= form.text_area :body, class: "w-full border border-slate-600 rounded-xl focus:outline-0" %>

  <%= form.submit class: "rounded-lg py-2 px-2 ml-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>
