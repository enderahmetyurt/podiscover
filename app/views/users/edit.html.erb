<div class="w-full">
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Edit Profile</h1>
  </div>
  <section class="p-2 py-24 mt-10 bg-white rounded-xl">
    <%= form_with model: @user do |form| %>
      <div class="p-4">
        <%= form.label "Username", class: "block text-xs font-medium text-gray-700" %>
        <%= form.text_field :display_name, class: "border-gray-200 rounded-md shadow-sm sm:text-sm" %>
        <%= form.submit class: "mt-5 inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-2 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500" %>
      </div>
    <% end %>
  </section>
</div>
