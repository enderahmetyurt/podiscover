<div id="<%= dom_id podcast %>">
  <%= link_to(podcast) do %>
    <div class="grid content-around gap-4 mt-6 grid-row-2">
      <div >
        <%= image_tag podcast.image_urls.second.url, class: "object-cover h-48 w-96" %>
      </div>
      <div class="text-lg">
        <%= podcast.name %>
      </div>      
    </div>
  <% end %>
  
  <% if controller_name == "podcasts" %>
    <div class="mt-3 text-xs font-thin">
      <% if podcast.listener_count > 1 %>
        <span class="text-blue-500"><%= pluralize podcast.listener_count, "person" %></span> listen this podcast
      <% else %>
        <%= link_to podcast.user.nickname, podcast.user, class: "text-blue-500" %> is listening
      <% end %>
    </div>
  <% end %>
</div>
