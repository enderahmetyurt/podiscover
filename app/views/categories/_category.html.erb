<div id="<%= dom_id category %>">
  <%= link_to(category) do %>
    <div class="grid content-around gap-4 mt-6 grid-row-2">
      <div>
        <% if category.podcasts.any? %>
          <%= image_tag category.podcasts.sample.image_urls.second.url, class: "object-cover h-48 w-96" %>
        <% else %>
          <%= image_tag "podiscover.png", class: "object-cover h-48 w-96" %>
        <% end %>
      </div>
      <div class="text-lg">
        <%= category.name %>
      </div>
    </div>
  <% end %>
</div>
