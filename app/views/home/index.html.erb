<% if flash[:warn] %>
  <div class="p-4 mb-4 text-sm text-yellow-700 bg-yellow-100 rounded-lg dark:bg-yellow-200 dark:text-yellow-800" role="alert">
    <span class="font-medium"><%= flash[:warn] %></span>
  </div>
<% end %>
<div>
<section class="px-2 bg-white py-15 md:px-0">
  <div class="container items-center max-w-6xl px-4 py-12 mx-auto">
    <div class="flex flex-col-reverse items-center lg:flex-row">
      <div class="w-full md:w-1/2">
        <div class="w-full pb-6 space-y-6 sm:max-w-md lg:max-w-lg md:space-y-4 lg:space-y-8 xl:space-y-9 sm:pr-5 lg:pr-0 md:pb-0">
          <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 xl:leading-tight sm:text-5xl md:text-4xl lg:text-5xl xl:text-6xl">
            Discover Your Next Favorite Podcast <span class="text-[#8674F6]"> With <span class="font-black">Podiscover!</span> </span>
          </h1>
          <p class="mx-auto text-base text-gray-500 sm:max-w-md lg:text-xl md:max-w-3xl">Explore which podcasts your friends are listening to</p>
          <div class="relative flex flex-col sm:flex-row sm:space-x-4">
            <%= button_to 'Log in with Spotify', user_spotify_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "bg-[#1FD662] flex justify-center w-full px-8 py-3 mb-3 text-lg text-white rounded-full sm:mb-0 sm:w-auto" %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2">
        <div class="w-full h-auto overflow-hidden">
            <%= image_tag "hero.png" %>
          </div>
      </div>
    </div>
  </div>
</section>

<section class="py-20 bg-[#F4F4F8] tails-selected-element">
    <div class="container max-w-6xl mx-auto">
        <h2 class="text-lg font-bold tracking-tight text-center text-[#8674F6]">Features</h2>
        <p class="max-w-3xl mx-auto mt-2 text-5xl px-4 font-semibold text-center text-[#262729]">Check out our list of awesome features below.</p>
        <div class="grid grid-cols-2 gap-2 mt-10 lg:grid-cols-3 lg:gap-8 sm:px-8 xl:px-0">

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "easy-connection.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Easy connection</h4>
                <p class="text-base text-center text-gray-500">Not need to add your podcasts manually.</p>
            </div>

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "comments.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Comments</h4>
                <p class="text-base text-center text-gray-500">Write any comments to any podcast episodes, or see them.</p>
            </div>

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "likes.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Likes</h4>
                <p class="text-base text-center text-gray-500">Give kudos to any podcast episodes.</p>
            </div>

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "categories.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Categories</h4>
                <p class="text-base text-center text-gray-500">Find new podcasts in your favourite category.</p>
            </div>

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "community.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Community</h4>
                <p class="text-base text-center text-gray-500">Meet with new people who listen podcasts.</p>
            </div>

            <div class="px-2 py-12 text-center lg:px-8" data-rounded="rounded-xl" data-rounded-max="rounded-full">
                <%= image_tag "search.svg", class:"mx-auto" %>
                <h4 class="mt-4 mb-2 text-xl font-semibold text-gray-700">Search</h4>
                <p class="text-base text-center text-gray-500">Find podcasts by a keyword</p>
            </div>

        </div>
    </div>
</section>

