<div>
  <div>
    <%= render partial: "shared/search_form" %>
  </div>
  <div class="p-8 mt-5 bg-white rounded-xl">
    <div class="text-lg font-semibold">Podcast of the day</div>
    <div class="flex w-full mx-auto">
      <div>
        <div class="flex flex-col my-5 sm:flex-row">
          <div class="rounded-xl">
            <%= link_to podcast_path(podcast) do %>
              <% if podcast.image_urls.any? %>
                <%= image_tag podcast.image_urls.second.url, class:"rounded-xl" %>
              <% else %>
                <%= image_tag "podiscover.png", class:"rounded-xl" %>
              <% end %>
              <% if action_name == "show" %>
                <%= link_to podcast.external_url, class: "flex items-center", target: "_blank" do %>
                  <%= image_tag "spotify_logo.png", class: "ml-5 w-8 h-8" %>
                  <span class="ml-2 bg-transparent text-[#1db954] font-semibold">See on Spotify</span>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <div class="ml-5">
            <div class="mb-1 text-sm font-bold"><%= podcast.name %></div>
            <div class="mb-4 text-xs font-bold text-gray-400"><%= podcast.publisher %></div>
            <div class="text-xs font-medium leading-relaxed text-gray-500"><%= podcast.description %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>