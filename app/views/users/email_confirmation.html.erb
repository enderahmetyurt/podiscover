<section class="py-20 bg-white">
    <div class="px-4 mx-auto text-center max-w-7xl sm:px-6 lg:px-8">
        <p class="tracking-tight text-gray-900">
          Create an account for Podiscover using your <span class="text-[#1db954]">Spotify</span> email address <span class="font-extrabold"> <%= @user.email %></span>
        </p>
        <div class="max-w-md mx-auto mt-3 text-base text-gray-500">
          <div>
            <span class="font-extrabold">Name:</span> <%= @user.display_name %> 
          </div>
          <div>
            <span class="font-extrabold">Email:</span> <%= @user.email %> 
          </div>
        </div>
        <div class="flex justify-center mt-8 space-x-3">
        <%= button_to 'Share my email address', allow_email_confirmation_user_path(@user), data: { turbo: "false" }, class: "inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-green-600 border border-transparent rounded-md shadow hover:bg-indigo-700" %>
        <%= button_to 'Hide my email address', deny_email_confirmation_user_path(@user), data: { turbo: "false" }, class: "inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-red-600 border border-transparent rounded-md shadow hover:bg-indigo-700" %>
        </div>
    </div>
</section>
